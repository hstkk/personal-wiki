<Application x:Class="PersonalWiki.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
		<!-- Resources scoped at the Application level should be defined here. -->
    </Application.Resources>
    <JumpList.JumpList>
        <JumpList ShowFrequentCategory="True" ShowRecentCategory="False">
            <JumpTask Title="Hostikka.com"
                      Description="Open Hostikka.com"
                      Arguments="http://hostikka.com"
                      ApplicationPath="%PROGRAMFILES%\Internet Explorer\iexplore.exe"
                      IconResourcePath="%PROGRAMFILES%\Internet Explorer\iexplore.exe"/>
        </JumpList>
    </JumpList.JumpList>
</Application>
